<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bizhawkz.katarinaphang.OptionScreen">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/Add"
        android:weightSum="1">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="fitXY"
            android:src="@drawable/banner2"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.74"
        android:weightSum="1">

<!--        FirstContent-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:id="@+id/lay1"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:paddingBottom="6dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/img_1"
                    android:layout_height="100dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/home"
                        android:scaleType="center"
                        android:src="@drawable/about_icon"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:textSize="20dp"
                        android:layout_marginTop="4dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginBottom="2dp"
                        android:text="About Katarina"/>
                </LinearLayout>

            </LinearLayout>
            <!--  SECOND BLOCK -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="6dp"
                android:paddingLeft="6dp"
                android:paddingBottom="6dp"
                android:layout_weight="1"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingRight="6dp"
                    android:background="@drawable/img_11"
                    android:layout_height="100dp"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/Blog"
                        android:scaleType="center"
                        android:src="@drawable/updateblog_icon"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#ffffff"
                        android:textSize="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="2dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="Blog"/>
                </LinearLayout>

            </LinearLayout>


</LinearLayout>

<!--        SecondContent-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/lay2"
            android:layout_margin="1dp"
            android:layout_marginTop="2dp"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:paddingBottom="2dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/img_2"
                    android:layout_height="105dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/product1"
                        android:scaleType="center"
                        android:src="@drawable/product_icon"
                        />
                    <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                        android:layout_marginTop="4dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="Product"/>
                </LinearLayout>

            </LinearLayout>
            <!--  SECOND BLOCK -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="6dp"
                android:paddingLeft="6dp"
                android:paddingBottom="6dp"
                android:layout_weight="1"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingRight="6dp"
                    android:background="@drawable/img_4"
                    android:layout_marginTop="2dp"
                    android:layout_height="105dp"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:scaleType="center"
                        android:id="@+id/coaching"
                        android:src="@drawable/coaching_icon"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#ffffff"
                        android:textSize="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="2dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="Coaching"/>
                </LinearLayout>

            </LinearLayout>
           <!--  THIRD BLOCK -->


        </LinearLayout>

<!--       Third Content-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/lay3"
            android:weightSum="2"
            android:layout_weight="0.35">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/img_5"
                    android:layout_height="105dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:scaleType="center"
                        android:layout_marginTop="10dp"
                        android:id="@+id/membership2"
                        android:src="@drawable/member_icon"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="Membership"/>
                </LinearLayout>

            </LinearLayout>
            <!--  SECOND BLOCK -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="6dp"
                android:paddingLeft="6dp"
                android:paddingBottom="6dp"
                android:layout_weight="1"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingRight="6dp"
                    android:background="@drawable/img_6"
                    android:layout_marginTop="2dp"
                    android:layout_height="105dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"

                        android:scaleType="fitCenter"
                        android:id="@+id/contact"
                        android:src="@drawable/con_icon"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:textSize="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="2dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="Contact Us"/>
                </LinearLayout>

            </LinearLayout>
            <!--  THIRD BLOCK -->


        </LinearLayout>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/SocialNetwork"

        android:layout_alignParentBottom="true"
        android:layout_below="@+id/membershiplay"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:id="@+id/iv_facebook"
                    android:src="@drawable/fb"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:src="@drawable/google"
                    android:id="@+id/iv_google"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:src="@drawable/pin"
                    android:id="@+id/iv_pin"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:src="@drawable/tw"
                    android:id="@+id/iv_twitter"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>
       </RelativeLayout>
