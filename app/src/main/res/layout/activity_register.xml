<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Pink"
    tools:context="com.bizhawkz.katarinaphang.Register">
    <ImageView
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:src="@drawable/logo"
        android:id="@+id/logoimage"
        android:layout_marginTop="18dp"
        android:layout_centerHorizontal="true" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"

        android:layout_below="@+id/logoimage"
        android:layout_centerInParent="true"
        android:id="@+id/scrollView">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/text1"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/ed_firstName"
        android:drawablePadding="6dp"
        android:textSize="16dp"
        android:hint="First Name"
        android:paddingRight="14dp"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
        android:paddingLeft="14dp"
        android:background="@drawable/textback"
        android:drawableLeft="@drawable/first_name"
        android:textColor="#000000"
        android:textColorHint="#d3d3d3"
        android:layout_gravity="center_horizontal"
        android:singleLine="true"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:id="@+id/ed_lastName"

            android:textSize="16dp"
            android:drawablePadding="6dp"
            android:hint="Last Name"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
            android:paddingRight="14dp"
            android:paddingLeft="14dp"
            android:background="@drawable/textback"
            android:drawableLeft="@drawable/last_name"
            android:textColor="#000000"
            android:textColorHint="#d3d3d3"
            android:layout_gravity="center_horizontal"
            android:singleLine="true"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:id="@+id/ed_email"
            android:drawablePadding="6dp"
            android:textSize="16dp"
            android:hint="Email"
            android:paddingRight="14dp"
            android:paddingLeft="14dp"
            android:background="@drawable/textback"
            android:drawableLeft="@drawable/email"
            android:textColor="#000000"
            android:textColorHint="#d3d3d3"
            android:layout_gravity="center_horizontal"
            android:singleLine="true"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:id="@+id/ed_password"
            android:drawablePadding="6dp"
            android:textSize="16dp"
            android:hint="Password"
            android:paddingRight="14dp"
            android:inputType="textPassword"
            android:paddingLeft="14dp"
            android:background="@drawable/textback"
            android:drawableLeft="@drawable/pass_icon"
            android:textColor="#000000"
            android:textColorHint="#d3d3d3"
            android:layout_gravity="center_horizontal"
            android:singleLine="true"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:id="@+id/ed_age"
            android:drawablePadding="6dp"
            android:textSize="16dp"
            android:hint="Age"
            android:paddingRight="14dp"
            android:inputType="number"
            android:paddingLeft="14dp"
            android:background="@drawable/textback"
            android:drawableLeft="@drawable/age"
            android:textColor="#000000"
            android:textColorHint="#d3d3d3"
            android:layout_gravity="center_horizontal"
            android:singleLine="true"/>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="Click here to register"
            android:layout_marginTop="20dp"
            android:id="@+id/btn_Submit"
            android:textColor="#ff0066"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:background="#ffffff"
            />
    </LinearLayout>
    </ScrollView>
</RelativeLayout>

